# meta developer: @LavaModules

from hikkatl.types import Message
from .. import loader, utils

@loader.tds
class ChatInfo(loader.Module):
    """–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ —á–∞—Ç–µ"""
    
    strings = {
        "name": "L:ChatInfo",
        "result": (
            "<b>[üåã] –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ —á–∞—Ç–µ</b>\n\n"
            "<b>‚Ä¢ [ü´ü] –ù–∞–∑–≤–∞–Ω–∏–µ:</b> <code>{}</code>\n"
            "<b>‚Ä¢ [ü´ü] ID:</b> <code>{}</code>"
        ),
        "err": "üö´ –û—à–∏–±–∫–∞ –ø–æ–ª—É—á–µ–Ω–∏—è –¥–∞–Ω–Ω—ã—Ö",
        "not_group": "‚ö†Ô∏è –≠—Ç—É –∫–æ–º–∞–Ω–¥—É –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Ç–æ–ª—å–∫–æ –≤ –≥—Ä—É–ø–ø–∞—Ö!"
    }

    async def client_ready(self, client, db):
        self.client = client

    @loader.command(ru_doc="–ü–æ–∫–∞–∑–∞—Ç—å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ —á–∞—Ç–µ (—Ä–∞–±–æ—Ç–∞–µ—Ç —Ç–æ–ª—å–∫–æ –≤ –≥—Ä—É–ø–ø–∞—Ö)")
    async def cinfo(self, message: Message):
        """–ö–æ–º–∞–Ω–¥–∞ –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ —á–∞—Ç–µ"""
        try:
            if not message.is_group or message.is_private:
                await utils.answer(message, self.strings["not_group"])
                return
            
            await message.delete()
            
            chat = await message.get_chat()
            if not hasattr(chat, "title"):
                return
            
            text = self.strings["result"].format(
                chat.title,
                f"-100{chat.id}" if not str(chat.id).startswith("-100") else str(chat.id)
            )

            if chat.photo:
                img = await self.client.download_profile_photo(chat, bytes)
                await self.client.send_file(
                    message.peer_id,
                    img,
                    caption=text,
                    reply_to=utils.get_topic(message)
                )
            else:
                await utils.answer(message, text)
                
        except:
            await utils.answer(message, self.strings["err"])
            await message.delete()
